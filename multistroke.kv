#:kivy 1.11.1
<MainButton@ToggleButton>:
    group: "mainmenu"
    canvas.before:
        Color:
            #rgba: 4,14,51,1 # real
            rgb: (0.01,0.05,0.2) # real divided by 255
        Rectangle:
            pos: self.pos
            size: self.size
    on_press:
        if self.state == 'normal': self.state = 'down'


<Background_white_gridlayout>:
    cols: 1
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size


<MainMenu>:
    rows: 1
    size_hint: (1, None)
    #height: 50
    #spacing: 3
    #padding: 3
    MainButton:
        id: btn1
        background_normal: ".notforgit/svg/news.png"
        background_down: ".notforgit/svg/news-1.png"
        on_press:
            app.manager.current = 'screen1'
    MainButton:
        id: btn2
        background_normal: ".notforgit/svg/league.png"
        background_down: ".notforgit/svg/league-1.png"
        on_press:
            app.manager.current = 'screen2'
    MainButton:
        id: btn3
        background_normal: ".notforgit/svg/user.png"
        background_down: ".notforgit/svg/user-1.png"
        on_press:
            app.manager.current = 'screen3'
    MainButton:
        id: btn4
        background_normal: ".notforgit/svg/schedule.png"
        background_down: ".notforgit/svg/schedule-1.png"
        on_press:
            app.manager.current = 'screen4'
    MainButton:
        id: btn5
        background_normal: ".notforgit/svg/more.png"
        background_down: ".notforgit/svg/more-1.png"
        on_press:
            app.manager.current = 'screen5'


<Screen_news>:
    name: "screen1"
    Label:
        text: "LABEL SCREEN1 in .kv"
<Screen_league>:
    name: "screen2"
    Label:
        text: "LABEL SCREEN2 in .kv"
<Screen_user>:
    name: "screen3"
    Label:
        text: "LABEL SCREEN3 in .kv"
<Screen_schedule>:
    name: "screen4"
    Label:
        text: "LABEL SCREEN4 in .kv"


<Screen_more>:
    name: "screen5"
    GridLayout:
        rows: 3
        AnchorLayout:
            anchor_y: 'top'
            anchor_x: 'center'
            BoxLayout:
                size_hint: 1,None
                height: 270
                spacing: 5
                orientation: "vertical"
                Label:
                    height: 50
                    size_hint: 1,None
                    color: 0,0,0,1
                    text: "empty space for neck. y: 50px"
                Button:
                    text: "btn1"
                    size_hint: 1,None
                    height: 50
                    background_normal: ".notforgit/svg/bluebutton.png"
                Button:
                    text: "btn2"
                    size_hint: 1,None
                    height: 50     
                Button:
                    text: "btn3"
                    size_hint: 1,None
                    height: 50  
                Button:
                    text: "btn4"
                    size_hint: 1,None
                    height: 50    
        Button:
            size_hint: (1,0.5)
            text: "empty space"     
        Button:
            size_hint: (1,0.33)
            text: "SPONSORS.png"
    
